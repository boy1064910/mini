.container{
  background-color: #fff;
  margin:8rpx 0 16rpx 0;
  padding: 10rpx 20rpx;
}
.form-group{
  border-bottom:1px solid #DFDFDD;
}
.input-ico{
  width: 40rpx;
  height: 40rpx;
}
.count-down-btn{
  background-color: #B3B3B3;
  height: 52rpx;
  line-height:52rpx;
  text-align: center;
  padding:0 20rpx;
  border-radius: 6rpx;
  color: #fff;
  width: 200rpx;
}


/*身份选择样式*/
.id-choose-title{
  margin: 0rpx 20rpx;
}
/*选项卡样式*/
.tab{
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  border: 1px solid #DFDFDD;
}
.tab>view{
  width: 33%;
  text-align: center;
  font-size: 28rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-right: 1px solid #DFDFDD;
}
.tab>view:last-child{
  border-right: none;
}

/*保存按钮*/
.form-button{
  border-radius: 0;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
}