.swiper{
  height: 422rpx;
}

.panel-teacher{
  background-color: #fff;
  width: 100%;
}
.panel-teacher .title{
  text-align: center;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 30rpx;
}
.panel-scroll-teacher{
  white-space: nowrap; 
  display: flex;
}
.panel-scroll-teacher .lump-teacher{
  width: 100rpx;
  display: inline-block;
  margin: 16rpx 30rpx;
}
.panel-scroll-teacher .lump-teacher image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 80rpx;
}
.panel-scroll-teacher .lump-teacher .lump-teacher-info{
  text-align: center;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.panel-course{
  background-color: #fff;
  margin: 20rpx;
  border-radius: 8rpx;
  border: 1px solid #c9c9c9;
}
.course-info{
  display: flex;
  flex-direction: row;
  border-bottom: 1px dashed #c9c9c9;
  padding: 20rpx;
}
.course-info-pic{
  background-color: #e5e5e5;
  width: 250rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-right: 20rpx;
}
.course-info>image{
  width: 240rpx;
  height: 135rpx;
  margin-right: 20rpx;
}

.course-name{
  color: #000;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 32rpx;
  overflow: hidden;
  font-weight: bold;
}
.coourse-teacher{
  width: 300rpx;
  color: #757575;
}
.coourse-teacher>view:last-child{
  font-size: 20rpx;
  padding-top: 6rpx;
}
.course-price{
  display: flex;
  align-items:flex-end;
  text-align: right;
  color: #ff4800;
}
.course-price text{
  font-size: 32rpx;
  font-weight: bold;
}
.course-bottom{
  display: flex;
  flex-direction: row;
  margin-top: 12rpx;
}
.panel-course-other{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.panel-course-other view{
  height: 48rpx;
  padding-left: 20rpx;
  color: #757575;
  font-size: 20rpx;
  display: flex;
  align-items: center;
}
.panel-course-other view:first-child{
  width: 200rpx;
}
.panel-course-other-image-location{
  height: 22rpx;
  width: 18rpx;
}
.panel-course-other-image-times{
  height: 20rpx;
  width: 22rpx;
}
.panel-course-other text{
  margin-left: 10rpx;
}