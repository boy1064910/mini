/**课程信息*/
.panel-course{
  background-color: #fff;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #c9c9c9;
}
.course-info{
  display: flex;
  flex-direction: row;
  border-bottom: 1px dashed #c9c9c9;
  padding: 20rpx;
  position: relative;
}
.course-info-pic{
  background-color: #e5e5e5;
  width: 250rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-right: 20rpx;
}
.course-info-pic>image{
  width: 240rpx;
  height: 135rpx;
}
.course-name{
  color: #000;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 32rpx;
  overflow: hidden;
  font-weight: bold;
}
.coourse-teacher{
  width: 300rpx;
}
.course-price{
  display: flex;
  align-items:flex-end;
  text-align: right;
  color: #ff4800;
}
.course-price text{
  font-size: 32rpx;
  font-weight: bold;
}
.course-bottom{
  display: flex;
  flex-direction: row;
  margin-top: 12rpx;
}
.course-del-btn{
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #ff4800;
  border-radius: 20rpx;
  color: #fff;
  font-weight: bold;
  text-align: center;
  z-index: 1;
}

.panel-course-other{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.panel-course-other view{
  height: 48rpx;
  padding-left: 20rpx;
  color: #757575;
  font-size: 20rpx;
  display: flex;
  align-items: center;
}
.panel-course-other view:first-child{
  width: 200rpx;
}
.panel-course-other-image-location{
  height: 22rpx;
  width: 18rpx;
}
.panel-course-other-image-times{
  height: 20rpx;
  width: 22rpx;
}
.panel-course-other text{
  margin-left: 10rpx;
}


/**尚未初始化认证的用户信息*/
.panel-un-identity{
  background-color: #fff;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #c9c9c9;
}
.identity-line{
  display: flex;
  flex-direction: row;
  margin: 0 20rpx;
  align-items: center;
  height: 60rpx;
}
.identity-line radio{
  margin-left: 20rpx;
}

/**底部支付行*/
.payment-line{
  position: fixed;
  bottom: 0;
  width: 100%;
  color: #fff;
  font-size: 32rpx;
}
.payment-line>view{
  float: left;
  /*width: 50%;*/
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.payment-line-l{
  background-color: #0B9EDE;
}
.payment-line-r{
  width: 100%;
  background-color: #62B900;
}