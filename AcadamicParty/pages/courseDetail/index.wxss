.page-content{
  padding-bottom: 110rpx;
}
.page-content>view{
  border-bottom: 1px solid #DFDFDD;
  margin-bottom: 10rpx;
}
/**课程信息*/
.course-info{
  background: #fff;
}
.course-name-detail{
  padding: 10rpx 20rpx;
}
.course-name{
  width: 70%;
  float: left;
  max-height: 70rpx;
  overflow: hidden;
  font-weight: bold;
  font-size:28rpx;
}
.course-count{
  width: 30%;
  float: right;
  text-align: right;
}
.course-count text{
  color: #0B9EDE;
  font-size: 28rpx;
  font-weight: bold;
}
.course-info-other{
  color: #757575;
  font-size: 20rpx;
  padding: 10rpx 20rpx;
}
.course-info-other text:first-child{
  float: left;
}
.course-info-other text:last-child{
  float: right;
}
/**老师简介*/
.teacher-info{
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  height: 180rpx;
  background-color: #fff;
  width: 100%;
  border-bottom: 1px solid #DFDFDD;
}
.teacher-info-pic{
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  width: 100rpx;
}
.teacher-info-pic image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.teacher-info-pic text{
  text-align: center;
  overflow: hidden;
}
.teacher-info-detail{
  margin: 20rpx;
}
.teacher-info-detail view{
  height: 40rpx;
  line-height: 40rpx;
}

/**课程介绍*/
.course-intro{
  margin-bottom: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #DFDFDD;
}
.course-intro-title{
  font-size: 28rpx;
  font-weight: bold;
  padding: 10rpx;
}
.course-intro-info{
  margin: 0 20rpx 20rpx 20rpx;
  color: #757575;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
/**课程明细*/
.course-detail-outline{
  margin-bottom: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #DFDFDD;
}
.course-detail-list{
  overflow: hidden;
}
.course-detail{
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #DFDFDD;
  margin: 0 20rpx;
  padding: 10rpx 0;
}
.course-detail-l{
  width: 80%;
}
.course-detail-l view{
  height: 40rpx;
  line-height: 40rpx;
  color: #757575;
  font-size: 20rpx;
}
.course-detail-l view:first-child{
  color: #000;
  font-size: 24rpx;
}
.course-detail-r{
  width: 20%;
  text-align: right;
  color: #757575;
  font-size: 20rpx;
}

.more-detail-btn{
  width: 30rpx;
  height: 20rpx;
}

/**购买栏目*/
.shopping-line{
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}
.shopping-line-l{
  float: left;
  width: 40%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
}
.shopping-line-l-img{
  display: flex;
  position: relative;
}
.shopping-line-l image{
  width: 44rpx;
  height: 52rpx;
  margin: 0 20rpx;
}
.shopping-line-l-count{
  position: absolute;
  right: 8rpx;
  top: -10rpx;
  font-size: 16rpx;
  color: #fff;
  background-color: #FF3400;
  line-height: 28rpx;
  height: 28rpx;
  width: 28rpx;
  text-align: center;
  border-radius: 20rpx;
}
.shopping-line-r-btn{
  float: right;
  width: 40%;
  color: #fff;
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.shopping-line-r-price{
  float: right;
  width: 20%;
  color: #FF3400;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.shopping-line-r-price>text{
  font-size: 32rpx;
  font-weight: bold;
}

.course-name-detail::after,
.course-info-other::after,
.shopping-line::after{
  clear: both;
  display: block;
  content: " ";
}