.teacher-info{
  background-color: #fff;
}
.teacher-info-f{
  position: relative;
}
.teacher-head{
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  border: 2px solid #eee;
  position: absolute;
  top: -70rpx;
  left: 20rpx;
}
.teacher-name{
  padding-left: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.teacher-name>text:first-child{
  font-size: 28rpx;
}
.teacher-name>text:last-child{
  font-size: 20rpx;
  color: #757575;
}
.teacher-info-s{
  display: flex;
  flex-direction: row;
}
.teacher-info-data{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100rpx;
  justify-content: center;
}
.teacher-info-data>text:last-child{
  color: #757575;
  font-size: 20rpx;
}