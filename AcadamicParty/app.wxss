/*表单样式*/
.form-group{
  display: flex;
  align-items: center;
  position: relative;
}
.form-input{
  height: 80rpx;
  line-height: 80rpx;
  color: #000;
  padding-left: 16rpx;
  width: 100%;
  font-size: 28rpx;
}
.form-input-placeholder{
  color: #757575;
}
button{
  font-size: 28rpx;
}





.form-group-row{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin: 0 20rpx;
  border-bottom:1px solid #eee;
}

.form-group-row>image{
  width: 22rpx;
  height: 32rpx;
}





picker{
  width: 100%;
  height:80rpx;
  padding-left: 10rpx;
  font-size: 28rpx;
}
.picker{
  color: #757575;
  width: 100%;
  align-items:center;
  display:flex;
  height:80rpx;
}
textarea{
  font-size: 28rpx;
  width:100%;
  padding-left: 10rpx;
  margin-top:20rpx;
  height: 150rpx;
}
.textarea-placeholder{
  color: #757575;
}
button{
  background-color: #0B9EDE;
  color: #fff;
  width: 100%;
}