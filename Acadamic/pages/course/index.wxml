            <view>{{model.chapter.name}}</view>
        </view>
        <view class='chapter-info-item-rt' wx:if="{{!model.buyed}}">
            <button size='mini' catchtap='payChapter' id="{{model.chapter.id}}">ï¿¥{{model.chapter.price}}</button>
        </view>
