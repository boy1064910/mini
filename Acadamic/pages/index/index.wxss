/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.course-info{
	width: 100%;
	margin-top: 30rpx;
}
.course-info>view{
	padding: 20rpx 0rpx 8rpx 0rpx;
	margin: 0 20rpx;
}
.course-buyed-title{
	text-align: left;
	font-size: 32rpx;
	color: #36363A;
	border-bottom: 1px dashed #ccc;	
}
.course-info-list{
	text-align: center;
}
.course-info-list>view{
	display: none;
}
.course-info-list .none-course-tips{
	color: #ccc;
    font-size: 28rpx;
}
.course-info-list .course-info-item{
    display: flex;
    flex-direction: row;
    border-bottom: 1px dashed #ccc;	
}
.course-info-list .course-info-item .course-info-item-lf{
    display: flex;
    flex-direction: column;
    width: 80%;
    text-align: left;
    font-size: 28rpx;
}
.course-info-list .course-info-item .course-info-item-lf>view:first-child{
    font-weight: bold;
    font-size: 36rpx;
    padding: 8rpx 0;
}
.course-info-list .course-info-item .course-info-item-rt{
    width: 30%;
    display: flex;
    align-items:center;
}
.course-info-list .course-info-item .course-info-item-rt button{
    background-color: #4183c4;
    color: #fff;
}

.btn-info{
	margin-top: 30rpx;
}