/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.course-info{
	width: 100%;
	margin-top: 30rpx;
}
.course-info>view{
	padding: 20rpx 0rpx 8rpx 0rpx;
	margin: 0 20rpx;
}
.course-buyed-title{
	text-align: left;
	font-size: 32rpx;
	color: #36363A;
	border-bottom: 1px dashed #ccc;	
}
.course-info-list{
	text-align: center;
}
.course-info-list>view{
	display: none;
	font-size: 30rpx;
}
.course-info-list .none-course-tips{
	color: #ccc;
}

.btn-info{
	margin-top: 30rpx;
}